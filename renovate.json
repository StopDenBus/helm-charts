{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": ["charts/**/*"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "{{parentDir}}",
      "bumpVersion": "patch"
    }
  ]
}
